/var/log/pandora/pandora_agent.log 
/var/log/pandora/pandora_server.log 
/var/log/pandora/pandora_server.error {
	weekly
	missingok
	size 300000
	rotate 3
	maxage 90
	compress
	notifempty
        copytruncate
}

# DEBIAN / UBUNTU 
